#ifndef OSG_SHADERMODEFOG
#define OSG_SHADERMODEFOG 1

#include <osg/ShaderMode>

namespace osg {

/** 
 * GLSL shader implementation of OpenGL fog functionality.
 */
class OSG_EXPORT ShaderModeFog : public ShaderMode
{

    public :
        
        ShaderModeFog();
        
        /** Copy constructor using CopyOp to manage deep vs shallow copy. */
        ShaderModeFog(const ShaderModeFog& shaderModeFog,const CopyOp& copyop=CopyOp::SHALLOW_COPY) :
			ShaderMode(shaderModeFog,copyop)
        {
        }
        
        META_ShaderMode(osg, ShaderModeFog)
        
        const static Type type = FOG;
        
        virtual Type getType() const { return FOG; }
	
        /** Add shader inputs to given stream **/
        void writeSourceImplementation(SourceOutput& str, SourceInjectLocation location, unsigned int index=0);
};

}

#endif
